# Test SPARQL query to check if "Aro Tolbukhin. En la mente del asesino" exists in the database
# and retrieve its country of origin

PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX wd: <http://www.wikidata.org/entity/>
PREFIX wdt: <http://www.wikidata.org/prop/direct/>

# Query 1: Check if movie exists with exact label (case-sensitive)
SELECT ?movieUri ?movieLabel WHERE {
  ?movieUri wdt:P31 wd:Q11424 .
  ?movieUri rdfs:label ?movieLabel .
  FILTER(?movieLabel = "Aro Tolbukhin. En la mente del asesino")
}
LIMIT 10

